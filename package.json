{
  "name": "crawlscrap-demo",
  "version": "1.0.0",
  "description": "License-safe crawler + scraper demo using Crawlee and Playwright",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "tsc && npm run copy-client",
    "copy-client": "node -e \"const fs = require('fs'); fs.cpSync('client', 'dist/client', {recursive: true});\"",
    "start": "node dist/server/index.js"
  },
  "keywords": [
    "crawler",
    "scraper",
    "crawlee",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "crawlee": "^3.11.0",
    "express": "^4.21.0",
    "playwright": "^1.48.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
